[user]
	name = Tonći Galić
[core]
	editor = vim
[alias]
	br = branch
	co = checkout
	cm = commit
	last = log -n 1
	changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
	st = status
	df = diff
	ds = diff --cached # diff staged
	dl = diff HEAD^   # diff last commit
	contributors = shortlog --summary --numbered
	fix = !$EDITOR `git diff --name-only --diff-filter=U`
	unstage = reset HEAD
	uncommit = reset --soft HEAD^
	alias = config --get-regexp ^alias\\.
	ec = config --global -e
	cb = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f" # clean specified or master branch merges
[push]
	default = current
[fetch]
	prune = true
[include]
	path = .gitconfig.user
